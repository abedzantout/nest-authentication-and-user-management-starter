{
  "name": "nest-boilerplate",
  "version": "1.0.0-beta.2",
  "description": "Powerful API starter with authentication and user management",
  "author": "TechHive.IO",
  "contributors": [
    {
      "email": "abed@techhive.io",
      "name": "Abdul Rahman Zantout"
    }
  ],
  "private": true,
  "license": "CHECK LICENSE UNDER LICENSE.md",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format-staged": "pretty-quick --staged",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:hmr": "nest build --webpack --webpackPath webpack-hmr.config.js",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "release": "standard-version && git push --follow-tags origin master",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=14 <15",
    "npm": ">=7"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mongoose": "^7.2.4",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.15",
    "bcrypt": "~5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "express-rate-limit": "^5.2.6",
    "helmet": "4.6.0",
    "mongodb": "^3.6.6",
    "mongoose": "^5.12.7",
    "nodemailer": "^6.6.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.2",
    "standard-version": "^9.3.0",
    "uuid": "^8.3.2",
    "webpack": "^5.36.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.15",
    "@types/express": "^4.17.11",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "26.0.23",
    "@types/node": "^15.0.2",
    "@types/nodemailer": "^6.4.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "eslint": "7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^6.0.0",
    "jest": "26.6.3",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "start-server-webpack-plugin": "^2.2.5",
    "supertest": "^6.1.3",
    "ts-jest": "26.5.6",
    "ts-loader": "^9.1.2",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
